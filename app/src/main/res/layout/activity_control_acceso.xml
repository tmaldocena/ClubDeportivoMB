<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41"
    android:padding="18dp"
    tools:context=".ControlAccesoActivity">

    <!-- ===== ENCABEZADO ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <!-- Ícono de usuario a la izquierda -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_24"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:backgroundTint="#1D1B41" />

        <!-- TextView de usuario centrado -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgUsuario"
            android:gravity="center_vertical"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/inria_sans"/>

        <!-- Chevron a la derecha -->
        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chevron_backward_24"
            android:tint="#FFFFFF" />

    </RelativeLayout>

    <!-- ===== TÍTULO ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <!-- Grupo pelota + texto centrado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">

            <!-- Pelota de soccer CENTRADA -->
            <ImageView
                android:id="@+id/imgPelota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/soccer_ball" />

            <!-- Texto a la derecha de la pelota -->
            <TextView
                android:id="@+id/title_control_acceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Control de Acceso - Escanear Carnet"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans" />

        </LinearLayout>

    </RelativeLayout>

    <!-- ===== CARD PRINCIPAL ===== -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3E3A72"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- ÁREA DEL SCANNER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#1D1B41"
                android:padding="16dp"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escaneá el código QR del carnet"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inria_sans"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

                <!-- Vista del scanner simplificada -->
                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:background="#2A2A2A"
                    android:foreground="@android:color/transparent"
                    app:cornerRadius="8dp">

                    <!-- Marco del scanner con borde usando otro CardView -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="4dp" />

                    <!-- Línea de escaneo animada -->
                    <View
                        android:id="@+id/scanLine"
                        android:layout_width="180dp"
                        android:layout_height="4dp"
                        android:background="#00BCD4"
                        android:layout_gravity="center_horizontal" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colocá el código QR dentro del marco"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:fontFamily="@font/inria_sans"
                    android:layout_marginTop="16dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- BOTÓN ESCANEAR MANUALMENTE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEscanearManualmente"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Escanear Manualmente con DNI"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/inria_sans"
                app:icon="@drawable/search_24"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"
                android:backgroundTint="#00BCD4"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===== FOOTER ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto final -->
        <TextView
            android:id="@+id/tvAyuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas ayuda?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/inria_sans"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>