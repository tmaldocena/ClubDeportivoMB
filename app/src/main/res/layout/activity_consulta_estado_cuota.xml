<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41"
    android:padding="18dp"
    tools:context=".ConsultarEstadoActivity">

    <!-- ENCABEZADO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_24"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:backgroundTint="#1D1B41" />

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/imgUsuario"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/inria_sans" />

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chevron_backward_24"
            app:tint="@color/white"/>
    </RelativeLayout>

    <!-- TÍTULO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgPelota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/soccer_ball" />

            <TextView
                android:id="@+id/title_consultar_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Consulta el estado de cuotas de los socios"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans" />

        </LinearLayout>
    </RelativeLayout>

    <!-- CARD PRINCIPAL -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#3E3A72"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Búsqueda -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar socio por DNI o Nombre"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/search_24"
                app:endIconTint="@color/black"
                app:boxBackgroundColor="#F1F3DF"
                app:boxStrokeColor="#00BCD4"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBuscarSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inria_sans" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Filtros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTodos"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Todos"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:backgroundTint="#00BCD4"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAlDia"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Al Día"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeudores"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adeuda"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:backgroundTint="#FF6B6B"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Lista de resultados -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultados de la búsqueda"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEstadoCuotas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FOOTER -->
    <TextView
        android:id="@+id/tvAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿Necesitás ayuda?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/inria_sans"
        android:layout_marginTop="12dp" />
</LinearLayout>